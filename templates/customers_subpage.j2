
<html>
 <head>
  <meta charset="UTF-8">
  <title>Customers</title>
  <Link rel="stylesheet" href="static/css/customers_style.css" type="text/css">
 </head>
 <body>

    <!-------- Nav bar -------->
    <div id="nav_bar">
      <ul id="nav_bar_list">
        <li id="nav_bar_elem"><a href={{customer_data[0][0]}}>Reports</a></li>
        <li id="nav_bar_elem"><a href={{customer_data[0][1]}}>Customers</a></li>
        <li id="nav_bar_elem"><a href={{customer_data[0][2]}}>Orders</a></li>
        <li id="nav_bar_elem"><a href={{customer_data[0][3]}}>Products</a></li>
        <li id="nav_bar_elem"><a href={{customer_data[0][4]}}>Departments</a></li>
        <li id="nav_bar_elem"><a href={{customer_data[0][5]}}>Seasons</a></li>
      </ul>
    </div>

    <!-------- Title -------->
    <div id="page_title">
      <h2>Customers</h2>
    </div>

    <div>
      <table>

        <!-- Table Headers -->
        <tr>
          <th>CustomerID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Birthday</th>
          <th>Zipcode</th>
          <th>Modify</th>
        </tr>

        <!-- Sample data -->
        {% for row in customer_data[1] %}
        <tr class="customer_row" id={{row['customerID']}}>
            <td>{{row['customerID']}}</td>
            <td>{{row['fName']}}</td>
            <td>{{row['lName']}}</td>
            <td>{{row['birthDate']}}</td>
            <td>{{row['zipCode']}}</td>
            <td><button class="updateCustomer" id={{row['customerID']}}>Update</button><button class="deleteCustomer" id={{row['customerID']}}>Delete</button></td>
        </tr>
        {% endfor %}

        <!-- Input Box -->
        <tr id="input_row">
          <td></td>
          <td><input id="new_fName" type="text" placeholder="First Name"></input></td>
          <td><input id="new_lName" type="text" placeholder="Last Name"></input></td>
          <td><input id="new_dob" type="text" placeholder="Birthday"></input></td>
          <td><input id="new_zipCode" type="text" placeholder="Zipcode"></input></td>
          <td><button id="new_submit_button">Submit</button> </td>
        </tr>

      </table>
    </div>

    <script src="static/js/customers_script.js"></script>
 </body>
</html>