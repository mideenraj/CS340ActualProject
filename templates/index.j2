    <div class="container_div">
        <div class="table_div">

            <!--Table (OrderProduct) for running log of purchases (Left div) -->
            <span class="table_title">Sell log</span>
            <table id = "order_table">

                <!--Table header-->
                <tr>
                    <th>productID</th>
                    <th>orderID</th>
                    <th>seasonID</th>
                    <th>quantitySold</th>
                    <th>productTotal</th>
                </tr>

                <!--Table data-->
                {% for row in reports_data[0] %}
                <tr>
                    <td>{{row['productID']}}</td>
                    <td>{{row['orderID']}}</td>
                    <td>{{row['seasonID']}}</td>
                    <td>{{row['quantitySold']}}</td>
                    <td>{{row['productTotal']}}</td>
                </tr>
                {% endfor %}


            </table>
        </div>



